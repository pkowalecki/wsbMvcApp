@model wsbMvcApp.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "_LoginLayout";
}

<h2>@ViewData["Title"]</h2>

<form method="post">

    <div class="text-center">
        <h1 class="display-4">Log in</h1><br /><br />

        <div class="form-group">
            <label for="login">Login</label>
            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @required = "required" })
        </div>
        <div class="form=group">
            <label for="login">Hasło</label>
            @Html.TextBoxFor(model => model.Password, new { type = "password", @class = "form-control", @required = "required" })
        </div><br />

        <button type="submit" class="btn btn-primary">Zaloguj</button>
        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">
                $(document).ready(function () {
                    alert('@ViewBag.Message');
                });</script>
        }
    </div>
</form>